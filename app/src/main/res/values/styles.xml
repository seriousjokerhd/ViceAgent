<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="AppThemeNew" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

        <item name="color">@android:color/white</item>
    </style>
    <style name="PropertTypeButton">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/poperty_type</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">130.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
    <style name="PropertTypeLeftButton">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/left_selector_gray_black</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">130.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
    <style name="PropertTypeRightButton">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/right_selector_gray_black</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">130.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

</resources>
